<div class="form">
  <%= form_with model: @plan, url: calendars_path do |f| %>
    <div class="field">
      <%= f.label :日付を選択, class: 'label' %>
      <%= f.date_field :date, class: 'date-select' %>
    </div>

    <div class="field">
      <%= f.label :予定を入力, class: 'label' %>
      <%= f.text_field :plan, class: 'text-input' %>
    </div>

    <%= f.submit '保存', class: 'button' %>
  <% end %>
</div>

<div class="calendar">
  <% @week_days.each do |day| %>
    <div class="item">
      <div class="date">
        <%= "#{day[:month]}/#{day[:date]}/#{day[:day_of_week]}" %>
      </div>
      <ul class="content">
        <% if day[:plans].any? %>
          <% day[:plans].each do |plan| %>
            <li class="plan-list">・<%= plan %></li>
          <% end %>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>